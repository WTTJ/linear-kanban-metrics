#!/usr/bin/env bash

# Wrapper script for env-handler.sh
# This provides a convenient way to run the env handler from anywhere

set -euo pipefail

# Get the directory of this script
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
readonly SCRIPT_DIR

# Execute the actual env-handler script
exec "${SCRIPT_DIR}/../scripts/env-handler.sh" "$@"