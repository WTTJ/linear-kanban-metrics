{
  "image": "mcr.microsoft.com/devcontainers/ruby:3.3",
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true
    }
  },
  "mounts": [
    "source=${localEnv:HOME}/dev/WTTJ/prompts,target=/home/vscode/prompts,type=bind,consistency=cached"
  ],
  "postCreateCommand": ".devcontainer/setup.sh",
  "customizations": {
    "vscode": {
      "extensions": [
        "shopify.ruby-lsp",
        "connorshea.vscode-ruby-test-adapter",
        "ms-vscode.vscode-json",
        "eamodio.gitlens",
        "mhutchie.git-graph",
        "alefragnani.project-manager",
        "humao.rest-client",
        "yzhang.markdown-all-in-one",
        "davidanson.vscode-markdownlint",
        "janisdd.vscode-edit-csv",
        "ms-azuretools.vscode-docker",
        "esbenp.prettier-vscode",
        "ryanluker.vscode-coverage-gutters"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "chat.promptFilesLocations": {
          "/home/vscode/prompts": true
        },
        "ruby.lsp.enabledFeatures": {
          "codeActions": true,
          "diagnostics": true,
          "documentHighlights": true,
          "documentLink": true,
          "documentSymbols": true,
          "foldingRanges": true,
          "formatting": true,
          "hover": true,
          "inlayHint": true,
          "onTypeFormatting": true,
          "selectionRanges": true,
          "semanticHighlighting": true,
          "completion": true,
          "codeLens": true,
          "definition": true,
          "workspaceSymbol": true,
          "signatureHelp": true,
          "typeHierarchy": true
        },
        "ruby.lsp.rubyVersionManager": "auto",
        "files.associations": {
          "Gemfile": "ruby",
          "Rakefile": "ruby",
          "Guardfile": "ruby",
          "*.gemspec": "ruby",
          ".rubocop.yml": "yaml"
        },
        "emmet.includeLanguages": {
          "ruby": "html"
        },
        "[ruby]": {
          "editor.defaultFormatter": "Shopify.ruby-lsp",
          "editor.formatOnSave": true,
          "editor.tabSize": 2,
          "editor.insertSpaces": true,
          "editor.semanticHighlighting.enabled": true
        },
        "[json]": {
          "editor.defaultFormatter": "vscode.json-language-features"
        },
        "[markdown]": {
          "editor.defaultFormatter": "vscode.markdown-language-features",
          "editor.wordWrap": "on"
        }
      }
    }
  }
}
